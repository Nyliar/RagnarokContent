valkyrie,53,39,3	script	Paladin#Valkyrie	752,{
	if (ADVJOB == 0 || Upper != 1) {
		set .@karma_d,rand(1,10);
		if (.@karma_d > 4) {
			mes "[Paladin]";
			mes "Félicitations.";
			mes "Honneur aux Guerriers!";
			close;
		}
		mes "[Paladin]";
		mes "N'oubliez jamais que la Guerre Sainte approche!";
		mes "Nous devons nous tenir prêts!";
		mes "Puisse la lumière de la justice éclairer toujours notre chemin!";
		close;
	}
	else if (ADVJOB == Job_Paladin && Class == Job_Swordman_High && JobLevel > 39) {
		mes "[Paladin]";
		mes "La Guerre Sainte arrivera sur nous avant que nous ayons eu le temps de dire 'ouf'. Plus que jamais, nous avons besoin d'hommes et de femmes forts pour combattre pour le bien et la justice.";
		next;
		mes "[Paladin]";
		mes "Souhaitez-vous rejoindre le côté des justes en tant que Paladin?";
		next;
		if (select("Non.:Oui.") == 1) {
			mes "[Paladin]";
			mes "Revenez quand vous vous sentirez prêt.";
			next;
			mes "[Paladin]";
			mes "Honneur aux Guerriers!";
			close;
		}
		if (SkillPoint) {
			mes "[Paladin]";
			mes "Vous n'avez pas terminé votre apprentissage.";
			close;
		}
		jobchange Job_Paladin;
		set ADVJOB,0;
		mes "[Paladin]";
		mes "Félicitations.";
		mes "En tant que Paladin, j'espère que vous protègerez les plus faibles que vous, afin d'apporter la victoire durant la guerre imminente entre le bien et le mal.";
		close;
	}
	mes "[Paladin]";
	mes "Bienvenue au Walhalla, le Hall des Honneurs.";
	next;
	mes "[Paladin]";
	mes "Faites comme chez vous.";
	mes "Honneur aux Guerriers!";
	close;
}
